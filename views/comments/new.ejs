<%- include('../partials/header'); -%>


<div class="container">
    <h1 style="text-align: center;">Add a New Comment to <%= event.name %></h1>
    <div style="width: 30%; margin: 50px auto;">
        <form action="/events/<%= event._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="text" name="comment" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Submit!</button>
            </div>
        </form>
        <a href="/events">Go Back</a>
    </div>
    

</div>

<%- include('../partials/footer'); -%>