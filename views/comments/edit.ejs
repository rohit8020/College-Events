<%- include('../partials/header'); -%>


<div class="container">
    <h1 style="text-align: center;">Edit!</h1>
    <div style="width: 30%; margin: 50px auto;">
        <form action="/events/<%= event_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= comment.text %>" name="comment" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Submit!</button>
            </div>
        </form>
        <a href="/events">Go Back</a>
    </div>
    

</div>

<%- include('../partials/footer'); -%>