<%- include('../partials/header'); -%>

    <div class="container"> 
        <div class="row">
                <div class="col-md-12">
                <div class="img-thumbnail">
                    <img src="/<%= event.image %>" class="img-responsive img-fluid" >
                <div class="caption-full">
                    <h4 class="pull-right">$<%= event.price %>/night</h4>
                    <h4><a href="#"><%= event.name %></a></h4>
                    <p>
                    <%= event.description %>
                    </p>
                    <p>Submitted By <strong><%= event.author.username %></strong></p>
                    <% if(currentUser && event.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-sm btn-warning" href="/events/<%= event._id %>/edit">Edit!</a>
                        <form id="delete-form" action="/events/<%= event._id %>?_method=DELETE" method="POST">
                            <button Class="btn btn-sm btn-danger"> Delete </button>
                        </form>
                    <% } %>
                    </div>
                    <iframe width="100%" height="560" src="<%= event.videoLink %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                    </iframe>
                    <h1>Time: <%= event.time %></h1>
                    <h1>College : <%= event.college %></h1>
                    <h1>Contact Number: <%= event.contactNumber %></h1>
                    <h1>Contact Email : <%= event.contactEmail %></h1>
                    <a href="<%= event.websiteLink %>">
                        <span><%= event.websiteLink %></span>
                    </a>
                </div>
                <div class="card card-body bg-light" style="margin-top: 30px;">
                    <div class="text-right">
                        <p><a class="btn btn-success" href="/events/<%= event._id %>/comments/new">Add New Comment</a></p>
                    </div>
                    <hr>
                    <% event.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="pull-right"><%= comment.time %></span>
                                <p><%= comment.text %></p>
                                <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                <a class="btn btn-sm btn-warning" href="/events/<%= event._id %>/comments/<%= comment._id %>/edit">
                                    Edit!
                                </a>
                                <form id="delete-form" action="/events/<%= event._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-sm btn-danger" value="Delete!">
                                </form>
                                <% } %>
                                <hr>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
   
<%- include("../partials/footer"); -%>    
    
    
    
        